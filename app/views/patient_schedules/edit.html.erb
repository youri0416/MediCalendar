<%= form_with model: [@doctor, @patient, @patient_schedule], method: :patch do |f| %>
  <!-- 既存の編集フォーム -->
  <div class="field">
    <%= f.label :start_at %>
    <%= f.datetime_select :start_at %>
  </div>
  <div class="field">
    <%= f.label :end_at %>
    <%= f.datetime_select :end_at %>
  </div>
  <div class="field">
    <%= f.label :patient_type_id %>
    <%= f.collection_select :patient_type_id, PatientType.all, :id, :name %>
  </div>
  
  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<!-- 削除ボタンを追加 -->
<%= button_to "削除", doctor_patient_patient_schedule_path(@doctor, @patient, @patient_schedule), method: :delete, data: { confirm: "本当に削除しますか？" } %>

<h1>タスク新規作成</h1>
<div class="form-body">

  <%= form_with(model: [@doctor, @patient, @task], local: true) do |form| %>

    <div class="form-group">
      <%= form.label :title_id, "タイトル" %>
      <%= form.collection_select(:title_id, Title.all, :id, :name, {}) %>
    </div>

    <div class="form-group">
      <%= form.label :occupation_id, "職種" %>
      <%= form.collection_select(:occupation_id, Occupation.all, :id, :name, {}) %>
    </div>

    <div class="form-group">
      <%= form.label :name, "名前" %>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
      <%= form.label :phone_number, "PHS" %>
      <%= form.telephone_field :phone_number %>
    </div>

    <div class="form-group">
      <%= form.label :content, "内容" %>
      <%= form.text_area :content %>
    </div>

    <div class="form-group">
      <%= form.submit "作成" %>
      <%= link_to "キャンセル", doctor_patient_path(@doctor, @patient) , class: 'btn btn-cancel'%>
    </div>
  <% end %>
</div>


<h2>新しいタスクを作成</h2>

<%= form_with(model: [@doctor, @task], local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title_id, "タイトル" %>
    <%= f.number_field :title_id %>  <!-- タイトルID。適宜セレクトボックスに変更可 -->
  </div>

  <div class="form-group">
    <%= f.label :occupation_id, "職種" %>
    <%= f.number_field :occupation_id %>  <!-- 職業ID。適宜セレクトボックスに変更可 -->
  </div>

  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, "PHS" %>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="form-group">
    <%= f.label :content, "内容" %>
    <%= f.text_area :content %>
  </div>

  <div class="form-group">
    <%= f.submit "作成" %>
  </div>
<% end %>
